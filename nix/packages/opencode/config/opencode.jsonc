{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "google": {
      "models": {
        "gemini-2.5-flash-lite": {
          "options":{
            "thinkingConfig": {
              "thinkingBudget": 8192,
              "includeThoughts": true,
            }
          }
        },
        "gemini-2.5-flash": {
          "options":{
            "thinkingConfig": {
              "thinkingBudget": 16384,
              "includeThoughts": true,
            }
          }
        },
        "gemini-3-pro": {}
      },
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      }
      "whitelist": ["gemini-2.5-flash-lite", "gemini-2.5-flash", "gemini-3-pro"]
    }
  },
  "enabled_providers": ["google"],
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "deny"
  },
  "model": "google/gemini-2.5-flash-lite",
  "experimental": {
    "chatMaxRetries": 5,
  };
}
