{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  "default_agent": "ask",
  "provider": {
    "minimax": {
      "options": {
        "apiKey": "{env:MINIMAX_API_KEY}",
      },
      "models": {
        "MiniMax-M2.1": {},
      },
      "whitelist": ["MiniMax-M2.1"],
    },
    "xai": {
      "options": {
        "apiKey": "{env:GROK_API_KEY}",
      },
      "models": {
        "grok-4-1-fast-non-reasoning": {},
      },
      "whitelist": ["grok-4-1-fast-non-reasoning"],
    },
    "opencode": {
      "options": {
        "apiKey": "{env:OPENCODE_ZEN_API_KEY}",
      },
      "whitelist": [
        "glm-4.7-free",
        "big-pickle",
        "kimi-k2.5-free",
        "minimax-m2.1-free",
        "minimax-m2.5-free",
      ],
    },
  },
  "enabled_providers": ["opencode", "minimax", "xai"],
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "deny",
    "lsp": "allow",
  },
  "lsp": {},
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
      "enabled": true,
    },
    "serena": {
      "type": "remote",
      "url": "http://localhost:{env:SERENA_PORT}/mcp",
      "enabled": false,
    },
  },
  "agent": {
    // Use explorer agent instead!
    "explore": {
      "disable": true,
    },
  },
  "experimental": {
    "chatMaxRetries": 5,
  },
}
