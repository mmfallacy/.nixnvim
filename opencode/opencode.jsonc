{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": "notify",
  "default_agent": "ask",
  "provider": {
    "minimax": {
      "options": {
        "apiKey": "{env:MINIMAX_API_KEY}",
      },
      "models": {
        "MiniMax-M2.1": {},
      },
      "whitelist": ["MiniMax-M2.1"],
    },
    "xai": {
      "options": {
        "apiKey": "{env:GROK_API_KEY}",
      },
      "models": {
        "grok-4-1-fast-non-reasoning": {},
      },
      "whitelist": ["grok-4-1-fast-non-reasoning"],
    },
    "google": {
      "models": {
        "gemini-2.5-flash-lite": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 8192,
              "includeThoughts": true,
            },
          },
        },
        "gemini-2.5-flash": {
          "options": {
            "thinkingConfig": {
              "thinkingBudget": 16384,
              "includeThoughts": true,
            },
          },
        },
        "gemini-3-flash-preview": {
          "limit": {
            "context": 200000,
            "output": 65536,
          },
          "options": {
            "thinkingConfig": {
              "thinkingLevel": "medium",
              "includeThoughts": true,
            },
          },
        },
        "gemini-3-pro-preview": {
          "limit": {
            "context": 200000,
            "output": 65536,
          },
        },
      },
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}",
      },
      "whitelist": [
        "gemini-2.5-flash-lite",
        "gemini-2.5-flash",
        "gemini-3-flash-preview",
        "gemini-3-pro-preview",
      ],
    },
  },
  "enabled_providers": ["google", "minimax", "xai"],
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "deny",
  },
  "model": "minimax/MiniMax-M2.1",
  "lsp": {},
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      },
      "enabled": true,
    },
    "serena": {
      "type": "remote",
      "url": "http://localhost:{env:SERENA_PORT}/mcp",
      "enabled": false,
    },
  },
  "experimental": {
    "chatMaxRetries": 5,
  },
}
